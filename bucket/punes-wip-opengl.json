        "64bit": {
            "url": "https://ci.appveyor.com/api/projects/punesemu/puNES/artifacts/punes64.wip.opengl.zip",
            "hash": "bb427b53fc793e91f749f18bbbccf59ed2629dbd17eb2da362032a344f0e4b52"
        }
    },
    "installer": {
        "script": "Move-Item \"$dir\\punes.exe\" \"$dir\\punes_p.exe\""
    },
    "bin": [
        [
            "punes_p.exe",
            "punes-wip-opengl"
        ]
    ],
    "shortcuts": [
        [
            "punes_p.exe",
            "puNES\\puNES WIP (OpenGL)"
        ]
    ],
    "persist": [
        "bios",
        "cheat",
        "diff",
        "pgs",
        "prb",
        "save",
        "screenshot",
        "shp"
    ],
    "checkver": {
        "url": "https://ci.appveyor.com/api/projects/punesemu/punes/",
        "regex": "\"version\":\"(.*?)\".*\"commitId\""
    },
    "autoupdate": {
        "architecture": {
            "32bit": {
                "url": "https://ci.appveyor.com/api/projects/punesemu/puNES/artifacts/punes32.wip.opengl.zip"
            },
            "64bit": {
                "url": "https://ci.appveyor.com/api/projects/punesemu/puNES/artifacts/punes64.wip.opengl.zip"
            }
        }
    },
    "post_install": [
        "'puNES.cfg', 'input.cfg', 'recent.cfg' | ForEach-Object {",
        "    if (!(Test-Path \"$persist_dir\\$_.bak\")) {",
        "        New-Item -ItemType File \"$dir\\$_\" | Out-Null",
        "    } else {",
        "        Copy-Item \"$persist_dir\\$_.bak\" \"$dir\\$_\" -Force",
        "    }",
        "}"
    ],
    "uninstaller": {
        "script": [
            "'puNES.cfg', 'input.cfg', 'recent.cfg' | ForEach-Object {",
            "    Copy-Item \"$dir\\$_\" \"$persist_dir\\$_.bak\" -Force",
            "}"
        ]
    },
    "notes": "Configuration files cannot be persisted, but will be retained during the update"
}
