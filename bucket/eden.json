{
    "version": "0.0.2",
    "description": "World's most popular open-source Nintendo Switch emulator (forked from Yuzu)",
    "homepage": "https://eden-emu.dev/",
    "license": "GPL-3.0-or-later",
    "architecture": {
        "64bit": {
            "url": "https://github.com/eden-emulator/Releases/releases/download/0.0.2-pre-alpha/Eden-Windows-MSVC-0.0.2-pre-alpha-amd64.zip",
            "hash": "1216c757a40e0453211261eb0a9dffa99324f104518b6eb5761d76e96e4322a0"
        }
    },
    "extract_dir": "eden-windows-msvc",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\")) {",
        "   New-item \"$persist_dir\" -ItemType Directory | Out-Null",
        "   New-item \"$persist_dir\\user\" -ItemType Directory | Out-Null",
        "   if (Test-Path \"$env:APPDATA\\eden\") {",
        "       Write-host \"Migrating AppData...\" -ForegroundColor yellow",
        "       Copy-Item -Path \"$env:APPDATA\\eden\\*\" -Destination \"$persist_dir\\user\" -Recurse",
        "       Remove-Item -Path \"$env:APPDATA\\eden\" -Recurse",
        "   }",
        "}"
    ],
    "bin": [
        "eden.exe",
        "eden-cli.exe",
        "eden-room.exe"
    ],
    "shortcuts": [
        [
            "eden.exe",
            "Eden"
        ]
    ],
    "persist": [
        "user"
    ],
    "checkver": {
        "github": "https://github.com/eden-emulator/Releases/"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/eden-emulator/Releases/releases/download/$version-pre-alpha/Eden-Windows-MSVC-$version-pre-alpha-amd64.zip"
            }
        }
    }
}
