        "    $persist_dir\\baseq2\\",
	    "",
	    "- Quake 2 - Ground Zero:",
        "    $persist_dir\\rogue\\",
	    "",
	    "- Quake 2 - The Reckoning:",
        "    $persist_dir\\xatrix\\"
    ],
    "checkver": {
        "re": "Yamagi Quake II version <strong>(\\d+\\.\\d+)</strong> was released"
    },
    "autoupdate": {
        "url": "https://deponie.yamagi.org/quake2/windows/quake2-$version.zip",
