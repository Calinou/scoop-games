{
    "homepage": "https://github.com/AmatCoder/mednaffe/",
    "description": "Front-end for Mednafen",
    "version": "0.9.1",
    "license": "GPL-3.0-only",
    "url": "https://github.com/AmatCoder/mednaffe/releases/download/0.9.1/mednaffe-0.9.1-win.zip",
    "hash": "a19860a17257619315c286c64ae9131b8cd666472bc753dd8cb9a0137c23d895",
    "depends": "sudo",
    "pre_install": [
        "$medinst = 0",
        "if (Test-Path \"$scoopdir\\apps\\mednafen-dev\\current\\mednafen.exe\") {",
        "   $medinst = 1",
        "}",
        "elseif (Test-Path \"$scoopdir\\apps\\mednafen\\current\\mednafen.exe\") {",
        "   $medinst = 2",
        "}",
        "if ((Test-Path \"$scoopdir\\apps\\mednafen\\current\\mednafen.exe\") -and (Test-Path \"$scoopdir\\apps\\mednafen-dev\\current\\mednafen.exe\")) {",
        "   Write-Host -ForegroundColor Yellow \"Mednafen and Mednafen-dev were found on this system.\"",
        "   Write-Host -ForegroundColor Yellow \"Choose one to use mednaffe with, 1 (stable) or 2 (dev)\"",
        "   $medinst = Read-Host -Prompt \"[1 / 2]\"",
        "}",
        "if ($medinst -eq 0) {",
        "   Write-Error -Message \"Mednaffe must be installed AFTER mednafen or mednafen-dev. Install either of them, then install mednaffe!\" -Category NotInstalled",
        "   scoop uninstall mednaffe",
        "}"
    ],
    "bin": "mednaffe.exe",
    "shortcuts": [
        [
            "mednaffe.exe",
            "Mednaffe"
        ]
    ],
    "installer": {
        "script": [
            "switch ( $medinst ) {",
            "   1 { if (!(Test-Path \"$persist_dir\\mednafen.cfg\")) {",
            "       New-Item \"$persist_dir\" -ItemType Directory | Out-Null",
            "       sudo New-Item -ItemType HardLink -Path \"$persist_dir\\mednafen.cfg\" -Target \"$scoopdir\\persist\\mednafen-dev\\mednafen.cfg\" | Out-Null",
            "       }",
            "   Break",
            "   }",
            "   2 { if (!(Test-Path \"$persist_dir\\mednafen.cfg\")) {",
            "       New-Item \"$persist_dir\" -ItemType Directory | Out-Null",
            "       sudo New-Item -ItemType HardLink -Path \"$persist_dir\\mednafen.cfg\" -Target \"$scoopdir\\persist\\mednafen\\mednafen.cfg\" | Out-Null",
            "       }",
            "   Break",
            "   }",
            "}"
        ]
    },
    "persist": "mednafen.cfg",
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/AmatCoder/mednaffe/releases/download/$version/mednaffe-$version-win.zip"
    }
}
