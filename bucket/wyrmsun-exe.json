    "post_install": [
        "if (Test-Path \"$(appdir wyrmsun)\\current\") {",
        "   if (Test-Path \"$(appdir wyrmsun)\\$version\") {",
        "       Copy-Item \"$dir\\wyrmsun.exe\" \"$(appdir wyrmsun)\\$version\" -Force",
        "   } else {",
        "       Write-Host \"Incomplete installation due to different version of wyrmsun\" -ForegroundColor Red",
        "       Write-Host \"Update wyrmsun to complete the installation\" -ForegroundColor Red",
        "   }",
        "}"
    ],
    "uninstaller": {
        "script": [
            "if (Test-Path \"$(appdir wyrmsun)\\$version\\wyrmsun.exe\") {",
            "   Remove-Item \"$(appdir wyrmsun)\\$version\\wyrmsun.exe\"",
            "}"
        ]
