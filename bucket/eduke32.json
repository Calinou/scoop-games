        "",
        "    $persist_dir\\autoload"
    ],
    "architecture": {
        "32bit": {
            "url": "https://dukeworld.com/eduke32/synthesis/20240513-10568-088ce5c34/eduke32_win32_20240513-10568-088ce5c34.7z",
