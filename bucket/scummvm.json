{
    "version": "2.5.1",
    "description": "A virtual machine-esque program for playing classic games",
    "homepage": "https://www.scummvm.org/",
    "license": "GPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://downloads.scummvm.org/frs/scummvm/2.5.1/scummvm-2.5.1-win32-x86_64.zip",
            "hash": "ad407cf1ccaf8ceb428595cf60d345c61ea07a7cb71a9d065b4f5104cb7f99b8",
            "extract_dir": "scummvm-2.5.1-win32-x86_64"
        },
        "32bit": {
            "url": "https://downloads.scummvm.org/frs/scummvm/2.5.1/scummvm-2.5.1-win32.zip",
            "hash": "107c551ca527617f0cf3de986b0a4c8355d12d722ec1cda33a392884225c4251",
            "extract_dir": "scummvm-2.5.1-win32"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\")) {",
        "   New-Item -ItemType Directory -Path \"$persist_dir\\saves\" | Out-Null",
        "   New-Item -ItemType Directory -Path \"$persist_dir\\themes\" | Out-Null",
        "   New-Item -ItemType Directory -Path \"$persist_dir\\extras\" | Out-Null",
        "   '[scummvm]', 'updates_check=0', \"savepath=$persist_dir\\saves\", \"themepath=$persist_dir\\themes\", \"extrapath=$persist_dir\\extras\" | Set-Content \"$persist_dir\\scummvm.ini\"",
        "}"
    ],
    "bin": "scummvm.exe",
    "shortcuts": [
        [
            "scummvm.exe",
            "ScummVM",
            "--config=\"$persist_dir\\scummvm.ini\""
        ]
    ],
    "persist": [
        "scummvm.ini",
        "saves",
        "themes",
        "extras"
    ],
    "checkver": {
        "github": "https://github.com/scummvm/scummvm"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://www.scummvm.org/frs/scummvm/$version/scummvm-$version-win32-x86_64.zip",
                "extract_dir": "scummvm-$version-win32-x86_64"
            },
            "32bit": {
                "url": "https://www.scummvm.org/frs/scummvm/$version/scummvm-$version-win32.zip",
                "extract_dir": "scummvm-$version-win32"
            }
        },
        "hash": {
            "url": "$url.sha256"
        }
    }
}
