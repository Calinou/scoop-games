    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\dsda-doom.cfg\")) {",
        "   New-Item -ItemType File \"$dir\\dsda-doom.cfg\" | Out-Null",
        "}",
        "if (!(Test-Path \"$scoopdir\\persist\\_doom\")) {",
        "   New-item \"$scoopdir\\persist\\_doom\" -ItemType Directory | Out-Null",
